  "scripts": {
    "test": "jest --coverage",
    "build": "rm -rf dist && tsc",
    "pub": "yarn build && yarn publish",
    "start": "ts-node src",
    "watch": "yarn nodemon --watch src -e ts,js,json --exec \"yarn start\"",
    "lint": "lint-staged"
